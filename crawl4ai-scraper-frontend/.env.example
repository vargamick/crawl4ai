# Crawl4AI Frontend System - Environment Configuration Template
# Copy this file to .env and customize for your deployment

# =============================================================================
# PORTS AND NETWORKING
# =============================================================================

# Frontend service port (Nginx)
FRONTEND_PORT=3000

# API service port (FastAPI)
API_PORT=8000

# Host configurations
FRONTEND_HOST=localhost
API_HOST=localhost

# Base URLs for service communication
API_BASE_URL=http://localhost:8000
FRONTEND_BASE_URL=http://localhost:3000

# =============================================================================
# API CONFIGURATION
# =============================================================================

# CORS origins (comma-separated list or * for all)
CORS_ORIGINS=*

# Log level (debug, info, warning, error, critical)
LOG_LEVEL=info

# API worker configuration
MAX_WORKERS=1

# Crawler settings
CRAWLER_VERBOSE=true
CRAWL4AI_VERSION=latest

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API rate limiting (requests per minute)
RATE_LIMIT=60

# Maximum concurrent jobs
MAX_CONCURRENT_JOBS=3

# Request timeout (seconds)
REQUEST_TIMEOUT=300

# =============================================================================
# STORAGE AND CACHING
# =============================================================================

# Cache settings
CACHE_DIR=/app/cache
TEMP_DIR=/app/temp
LOG_DIR=/app/logs

# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600

# Maximum cache size (MB)
MAX_CACHE_SIZE=1024

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker build arguments
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Resource limits (production values)
API_MEMORY_LIMIT=2G
API_CPU_LIMIT=2.0
API_MEMORY_RESERVATION=512M
API_CPU_RESERVATION=0.5

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Set to 'production' for production deployment
NODE_ENV=development
PYTHON_ENV=development

# Security headers
SECURITY_HEADERS_ENABLED=true

# SSL/TLS configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/
SSL_KEY_PATH=/etc/ssl/private/

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================

# Health check intervals (seconds)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30

# Metrics collection
METRICS_ENABLED=false
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings
DEV_MODE=true
HOT_RELOAD=true
DEBUG_MODE=false

# Mock API settings (for development)
USE_MOCK_API=false
MOCK_API_DELAY=1000
